<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout
		android:id="@+id/scroll_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="810dp">

		<LinearLayout
			android:id="@+id/container_info"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="40dp"
			android:background="#fff"
			android:orientation="vertical">

			<!-- information header -->
			<LinearLayout
				android:id="@+id/information_header"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:paddingTop="20dp"
				android:paddingLeft="40dp"
				android:paddingRight="40dp"
				android:paddingBottom="20dp"
				android:background="#FDC005">

				<TextView
					android:id="@+id/nama_lembaga_singkatan"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="HMIF"
					android:textStyle="bold"
					android:textSize="50sp"
					android:textColor="#fff"/>

				<TextView
					android:id="@+id/nama_lembaga"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:text="Himpunan Mahasiswa Informatika"/>

				<!-- socmed line 1 -->
				<org.apmem.tools.layouts.FlowLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="5dp"
						android:orientation="horizontal">

						<ImageView
							android:id="@+id/socmed1_image"
							android:layout_width="@dimen/socmed_icon_size"
							android:layout_height="@dimen/socmed_icon_size"
							android:layout_gravity="center_vertical"/>

						<TextView
							android:id="@+id/socmed1_text"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5dp"
							android:layout_marginRight="20dp"
							android:text="HMIF"/>

					</LinearLayout>


					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="5dp"
						android:orientation="horizontal">

						<ImageView
							android:id="@+id/socmed2_image"
							android:layout_width="@dimen/socmed_icon_size"
							android:layout_height="@dimen/socmed_icon_size"
							android:layout_gravity="center_vertical"/>

						<TextView
							android:id="@+id/socmed2_text"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5dp"
							android:layout_marginRight="20dp"
							android:text="\@HMIF_ITB"/>

					</LinearLayout>


					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="5dp"
						android:orientation="horizontal">

						<ImageView
							android:id="@+id/socmed3_image"
							android:layout_width="@dimen/socmed_icon_size"
							android:layout_height="@dimen/socmed_icon_size"
							android:layout_gravity="center_vertical"/>

						<TextView
							android:id="@+id/socmed3_text"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5dp"
							android:layout_marginRight="20dp"
							android:text="L7HDS87"/>

					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="5dp"
						android:orientation="horizontal">

						<ImageView
							android:id="@+id/socmed4_image"
							android:layout_width="@dimen/socmed_icon_size"
							android:layout_height="@dimen/socmed_icon_size"
							android:layout_gravity="center_vertical"/>

						<TextView
							android:id="@+id/socmed4_text"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5dp"
							android:layout_marginRight="20dp"
							android:text="L7HDS87"/>

					</LinearLayout>

				</org.apmem.tools.layouts.FlowLayout>

				<TextView
					android:id="@+id/alamat_lembaga"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Labtek V lantai 1, Gedung Benny Subianto\nJalan Ganeca no 10, Bandung 40132"/>

			</LinearLayout>

			<TextView
				android:id="@+id/txt_info"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="15dp"
				android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
	tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
	quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
	consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
	cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non
	proident, sunt in culpa qui officia deserunt mollit anim id est laborum."/>


		</LinearLayout>


	</LinearLayout>

</android.support.v4.widget.NestedScrollView>